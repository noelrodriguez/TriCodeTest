@model ForgotPasswordViewModel
<div class="container" align="center">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 centered-form">

            <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                <h3><i class="fa fa-pencil"></i> Forgot your password?</h3>
                <hr>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Enter your email."/>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <div class="text-center">
                        <button type="submit" class="btn btn-lime">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
