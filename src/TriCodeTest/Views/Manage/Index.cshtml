@model IndexViewModel
<div class="container-fluid" style="margin-top:20px">
    <div class="row">
        <div class="col-sm-6 col-md-offset-3">
            <div class="card">
                <div class="card-block">
                    <div class="text-center">
                        <h3><i class="fa fa-pencil"></i> Change your account settings</h3>
                            <hr class="mt-2 mb-2">

                            <dl class="dl-horizontal">
                                <dt>First Name:</dt>
                                <dd>
                                    @(Model.FirstName ?? "None")
                                    @if (Model.FirstName != null)
                                    {
                                        <br />
                                        <a asp-controller="Manage" asp-action="SetFirstName" class="btn-bracketed">Change</a>
                                    }
                                    else
                                    {
                                        {
                                            <a asp-controller="Manage" asp-action="SetFirstName" class="btn-bracketed btn-raised">Add</a>
                                        }

                                    }

                                </dd>
                                <dt>Last Name:</dt>
                                <dd>
                                    @(Model.LastName ?? "None")
                                    @if (Model.LastName != null)
                                    {
                                        <br />
                                        <a asp-controller="Manage" asp-action="SetLastName" class="btn-bracketed">Change</a>
                                    }
                                    else
                                    {
                                        {
                                            <a asp-controller="Manage" asp-action="SetLastName" class="btn-bracketed btn-raised">Add</a>
                                        }
                                    }
                                </dd>
                                <dt>Password:</dt>
                                <dd>

                                    @if (Model.HasPassword)
            {
                                        <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create</a>
                                    }
                                </dd>

                                <dt>Phone Number:</dt>
                                <dd>
                                    @(Model.PhoneNumber ?? "None")
                                    @if (Model.PhoneNumber != null)
                                    {
                                        <br />
                                        <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Change</a>
                                        <form asp-controller="Manage" asp-action="RemovePhoneNumber" method="post"></form>
                                    }
                                    else
                                    {
                                        <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Add</a>
                                    }

                                </dd>
                            </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


