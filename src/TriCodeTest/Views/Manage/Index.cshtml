@model IndexViewModel
<div class="container">
    <div class="row">
        <div class=""
    </div>
    <fieldset>
        @{
            ViewData["Title"] = "Manage your account";
        }

        <h2>@ViewData["Title"].</h2>
        <p class="text-success">@ViewData["StatusMessage"]</p>
        <h4>Change your account settings</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>First Name:</dt>
            <dd>
                @(Model.FirstName ?? "None")
                @if (Model.FirstName != null)
                {
                    <br />
                            <a asp-controller="Manage" asp-action="AddFirstName" class="btn-bracketed">Change</a>
                }
                else
                {
                    {
                        <a asp-controller="Manage" asp-action="SetFirstName" class="btn-bracketed btn-raised">Add</a>
                    }

                }

            </dd>
            <dt>Last Name:</dt>
            <dd>
                @(Model.LastName ?? "None")
                @if (Model.LastName != null)
                {
                    <br />
                            <a asp-controller="Manage" asp-action="AddLastName" class="btn-bracketed">Change</a>
                }
                else
                {
                    {
                        <a asp-controller="Manage" asp-action="SetFirstName" class="btn-bracketed btn-raised">Add</a>
                    }
                }
            </dd>
            <dt>Password:</dt>
            <dd>

                @if (Model.HasPassword)
            {
                    <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change</a>
                }
                else
                {
                    <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create</a>
                }
            </dd>

            <dt>Phone Number:</dt>
            <dd>
                @(Model.PhoneNumber ?? "None")
                @if (Model.PhoneNumber != null)
                {
                    <br />
                            <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Change</a>
                            <form asp-controller="Manage" asp-action="RemovePhoneNumber" method="post"></form>
                }
                else
                {
                    <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Add</a>
                }

            </dd>
        </dl>
    </fieldset>

</div>

