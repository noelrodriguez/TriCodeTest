@model ApplicationUser
<div class="container" align="center">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 centered-form">
            <form asp-controller="Manage" asp-action="SetLastName" method="post">
                <h3><i class="fa fa-pencil"></i> Edit your name</h3>
                <hr>
                <div class="form-group">
                    <label asp-for="LastName" control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="text-center">
                        <button type="submit" class="btn btn-lime">Update</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}